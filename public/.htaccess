# =====================================
# SÉCURITÉ FINALE
# =====================================

# Protection ce fichier .htaccess
<Files ".htaccess">
    Require all denied
</Files>

# Désactivation browsing répertoires
Options -Indexes

# Protection liens symboliques
Options -FollowSymLinks +SymLinksIfOwnerMatch

# Désactivation includes server-side
Options -Includes

# Désactivation exécution CGI
Options -ExecCGI

# =====================================
# COMPATIBILITÉ EXISTANT
# =====================================

# Redirection ancienne structure (si migration)
# RewriteRule ^calculateur/(.*)$ /port/$1 [R=301,L]

# Fallback pour requêtes non matchées
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(error|health|robots\.txt|sitemap\.xml|favicon\.ico)$
RewriteRule ^(.*)$ index.php [QSA,L]