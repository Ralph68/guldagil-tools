# .htaccess pour /public/ (document root)
# Version: 0.5 beta + build auto
# Chemin: /public/.htaccess

RewriteEngine On

# Sécurité - Bloquer accès aux dossiers parents
RewriteRule ^\.\./ - [F,L]

# Protection fichiers sensibles
<Files ".env">
    Require all denied
</Files>

# URLs propres pour modules
RewriteRule ^calculateur/?$ calculateur/index.php [L]
RewriteRule ^calculateur/(.+)$ calculateur/$1 [L]

RewriteRule ^admin/?$ admin/index.php [L]
RewriteRule ^admin/(.+)$ admin/$1 [L]

RewriteRule ^user/?$ user/index.php [L]
RewriteRule ^user/(.+)$ user/$1 [L]

RewriteRule ^auth/?$ auth/login.php [L]
RewriteRule ^auth/(.+)$ auth/$1 [L]

# Pages d'erreur
ErrorDocument 404 /error.php?type=notfound
ErrorDocument 403 /error.php?type=access
ErrorDocument 500 /error.php?type=server

# Cache
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript
</IfModule>
