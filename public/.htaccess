# .htaccess pour /public/ (document root) - CORRIGÉ 403
# Version: 0.5 beta + build auto
# Chemin: /public/.htaccess

# Pages d'erreur personnalisées
ErrorDocument 404 /errors/404.php
ErrorDocument 403 /errors/403.php
ErrorDocument 500 /errors/500.php
ErrorDocument 503 /errors/503.php

RewriteEngine On

# ===== AUTORISER LES ASSETS STATIQUES EXPLICITEMENT =====
# CORRECTION 403 : Autoriser l'accès aux CSS/JS/Images AVANT toute restriction
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$">
    Require all granted
    # Désactiver le rewriting pour les assets
    RewriteEngine Off
</FilesMatch>

# Règles spécifiques pour assets
RewriteRule ^assets/ - [L]
RewriteRule ^.*\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$ - [L]

# Sécurité - Bloquer accès aux dossiers parents
RewriteRule ^\.\./ - [F,L]

# Protection fichiers sensibles (APRÈS assets)
<Files ".env">
    Require all denied
</Files>
<Files "*.log">
    Require all denied
</Files>

# Autoriser PHP dans public/ mais pas dans sous-dossiers sensibles
<Files "*.php">
    <RequireAll>
        Require all granted
    </RequireAll>
</Files>

# Page d'accueil par défaut
DirectoryIndex index.php index.html

# URLs propres pour modules
RewriteRule ^port/?$ port/index.php [L]
RewriteRule ^port/(.+)$ port/$1 [L]

RewriteRule ^admin/?$ admin/index.php [L]
RewriteRule ^admin/(.+)$ admin/$1 [L]

RewriteRule ^user/?$ user/index.php [L]
RewriteRule ^user/(.+)$ user/$1 [L]

RewriteRule ^auth/?$ auth/login.php [L]
RewriteRule ^auth/(.+)$ auth/$1 [L]

# Protection contre les injections (UNIQUEMENT sur les pages PHP)
RewriteCond %{REQUEST_FILENAME} \.(php)$ [NC]
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} ^.*(\[|\]|\(|\)|<|>|ê|"|;|\?|\*|=$).* [NC,OR]
RewriteCond %{QUERY_STRING} ^.*(&#x22;|&#x27;|&#x3C;|&#x3E;|&#x5C;|&#x7B;|&#x7C;).* [NC,OR]
RewriteCond %{QUERY_STRING} ^.*(%24&x).* [NC,OR]
RewriteCond %{QUERY_STRING} ^.*(%0|%A|%B|%C|%D|%E|%F|127\.0).* [NC,OR]
RewriteCond %{QUERY_STRING} ^.*(globals|encode|localhost|loopback).* [NC,OR]
RewriteCond %{QUERY_STRING} ^.*(request|select|concat|union|declare).* [NC]
RewriteRule ^(.*)$ /403.php [R=403,L]

# Gestion des modules (UNIQUEMENT si pas d'asset)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^([a-zA-Z0-9_-]+)/?$ /index.php?module=$1 [QSA,L]

# Gestion des actions de modules
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/?$ /index.php?module=$1&action=$2 [QSA,L]

# Cache pour les assets statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Compression GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript
</IfModule>

# Headers pour CORS si nécessaire
<IfModule mod_headers.c>
    # Permettre l'accès aux assets depuis le même domaine
    <FilesMatch "\.(css|js)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>
