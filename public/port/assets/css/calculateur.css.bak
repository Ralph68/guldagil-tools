/**
 * Titre: Styles calculateur de frais de port
 * Chemin: /public/assets/css/calculateur.css
 * Version: 0.5 beta + build auto
 */

/* Variables calculateur */
:root {
    --calc-primary: #3b82f6;
    --calc-primary-dark: #2563eb;
    --calc-success: #10b981;
    --calc-warning: #f59e0b;
    --calc-error: #ef4444;
    --calc-gray: #64748b;
}

/* Layout principal */
.calculator-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--spacing-lg);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    min-height: calc(100vh - 200px);
}

/* Panneaux */
.form-panel,
.results-panel {
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    border: 1px solid var(--gray-200);
}

.panel-header {
    padding: var(--spacing-lg);
    background: linear-gradient(135deg, var(--calc-primary), var(--calc-primary-dark));
    color: white;
    position: relative;
}

.panel-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: rgba(255, 255, 255, 0.2);
}

.panel-title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
}

.panel-subtitle {
    margin: 0.25rem 0 0;
    opacity: 0.9;
    font-size: 0.875rem;
}

/* Formulaire */
.form-content {
    padding: var(--spacing-lg);
}

.form-group {
    margin-bottom: var(--spacing-lg);
}

.form-label {
    display: block;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    color: var(--gray-700);
    font-size: 0.9rem;
}

.form-input,
.form-select {
    width: 100%;
    padding: var(--spacing-md);
    border: 2px solid var(--gray-200);
    border-radius: var(--radius-md);
    font-size: 1rem;
    transition: all 0.2s ease;
    background: white;
}

.form-input:focus,
.form-select:focus {
    outline: none;
    border-color: var(--calc-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.form-input.valid {
    border-color: var(--calc-success);
    background: rgba(16, 185, 129, 0.02);
}

.form-input.invalid {
    border-color: var(--calc-error);
    background: rgba(239, 68, 68, 0.02);
}

.form-help {
    display: block;
    font-size: 0.8rem;
    color: var(--gray-500);
    margin-top: 0.25rem;
}

/* Options de service */
.service-options {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.checkbox-option {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm);
    border-radius: var(--radius-md);
    transition: background-color 0.2s ease;
    cursor: pointer;
}

.checkbox-option:hover {
    background: var(--gray-50);
}

.checkbox-option input[type="checkbox"] {
    width: 1.25rem;
    height: 1.25rem;
    accent-color: var(--calc-primary);
}

.checkbox-option label {
    font-weight: normal;
    cursor: pointer;
    margin: 0;
}

/* Bouton calculer */
.btn-calculate {
    width: 100%;
    padding: var(--spacing-md) var(--spacing-lg);
    background: linear-gradient(135deg, var(--calc-primary), var(--calc-primary-dark));
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
}

.btn-calculate::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
}

.btn-calculate:hover:not(:disabled)::before {
    left: 100%;
}

.btn-calculate:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
}

.btn-calculate:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
}

.btn-calculate.loading {
    pointer-events: none;
}

/* R√©sultats */
.results-content {
    padding: var(--spacing-lg);
    min-height: 400px;
}

.results-placeholder {
    text-align: center;
    color: var(--gray-500);
    padding: var(--spacing-xl);
}

.results-placeholder-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.7;
}

.carrier-results {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.carrier-result {
    padding: var(--spacing-md);
    border: 2px solid var(--gray-200);
    border-radius: var(--radius-md);
    transition: all 0.3s ease;
    position: relative;
    background: white;
}

.carrier-result:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.carrier-result.best {
    border-color: var(--calc-success);
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.03), rgba(16, 185, 129, 0.01));
}

.carrier-result.best::before {
    content: 'üèÜ MEILLEUR TARIF';
    position: absolute;
    top: -1px;
    right: var(--spacing-md);
    background: var(--calc-success);
    color: white;
    padding: 0.25rem 0.75rem;
    font-size: 0.7rem;
    font-weight: 600;
    border-radius: 0 0 var(--radius-md) var(--radius-md);
}

.carrier-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-sm);
}

.carrier-name {
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--gray-800);
}

.carrier-logo {
    width: 60px;
    height: auto;
    opacity: 0.8;
}

.carrier-price {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--calc-primary);
    margin: var(--spacing-sm) 0;
}

.carrier-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: var(--spacing-sm);
    font-size: 0.875rem;
    color: var(--gray-600);
}

.detail-item {
    display: flex;
    flex-direction: column;
}

.detail-label {
    font-weight: 500;
    color: var(--gray-500);
}

.detail-value {
    font-weight: 600;
    color: var(--gray-700);
}

/* √âtats de chargement */
.loading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    color: var(--calc-primary);
    padding: var(--spacing-xl);
}

.loading-spinner {
    width: 24px;
    height: 24px;
    border: 3px solid var(--gray-200);
    border-top: 3px solid var(--calc-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Messages d'erreur */
.error-message {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid var(--calc-error);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    color: var(--calc-error);
    margin-bottom: var(--spacing-md);
}

.success-message {
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid var(--calc-success);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    color: var(--calc-success);
    margin-bottom: var(--spacing-md);
}

/* Historique */
.history-section {
    margin-top: var(--spacing-xl);
    border-top: 1px solid var(--gray-200);
    padding-top: var(--spacing-lg);
}

.history-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    padding: var(--spacing-sm);
    border-radius: var(--radius-md);
    transition: background-color 0.2s ease;
}

.history-header:hover {
    background: var(--gray-50);
}

.history-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
}

.history-content.open {
    max-height: 300px;
}

.history-item {
    padding: var(--spacing-sm);
    border-bottom: 1px solid var(--gray-100);
    font-size: 0.875rem;
}

/* Responsive */
@media (max-width: 1024px) {
    .calculator-container {
        gap: var(--spacing-lg);
    }
}

@media (max-width: 768px) {
    .calculator-container {
        grid-template-columns: 1fr;
        gap: var(--spacing-lg);
        padding: var(--spacing-md);
    }
    
    .carrier-details {
        grid-template-columns: 1fr 1fr;
    }
    
    .carrier-price {
        font-size: 1.5rem;
    }
}

@media (max-width: 480px) {
    .panel-header {
        padding: var(--spacing-md);
    }
    
    .form-content,
    .results-content {
        padding: var(--spacing-md);
    }
    
    .carrier-details {
        grid-template-columns: 1fr;
    }
}

/* Animations d'entr√©e */
.fade-in {
    animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Th√®me sombre (optionnel) */
@media (prefers-color-scheme: dark) {
    .form-panel,
    .results-panel {
        background: var(--gray-800);
        border-color: var(--gray-700);
    }
    
    .form-input,
    .form-select {
        background: var(--gray-700);
        border-color: var(--gray-600);
        color: white;
    }
    
    .carrier-result {
        background: var(--gray-700);
        border-color: var(--gray-600);
    }
}
